<div class="row">
    <div class="col-sm-10 col-xs-7">
        <div class="text-right subtotal">
            <span class="subtotal-title">{{i18n "checkout:subtotal"}}</span>
        </div>
      {{#if meta.features.cartDiscounts.active}}
          <div class="text-right">
              <span class="order-discount">{{i18n "checkout:orderDiscount"}}</span>
          </div>
      {{/if}}
        <div class="text-right delivery-info">
            <span class="delivery-info-title">{{i18n "checkout:shipping"}}</span>
        </div>
        <hr class="total-divider">
        <div class="text-right">
            <span>{{i18n "main:common.salesTax"}}</span>
        </div>
        <div class="text-right">
            <span class="order-total">{{i18n "checkout:total"}}</span>
        </div>
    </div>
    <div class="col-sm-2 col-xs-5 text-right">
        <div>
            <span>{{cart.subtotalPrice}}</span>
        </div>
      {{#if meta.features.cartDiscounts.active}}
          <div>
              <span class="order-discount">{{cart.discount}}</span>
          </div>
      {{/if}}
        <div>
            <span>{{cart.shippingMethod.price}}</span>
        </div>
        <hr>
        <div>
            <span>{{cart.salesTax}}</span>
        </div>
        <div>
            <span class="order-total">{{cart.totalPrice}}</span>
        </div>
    </div>

  {{#if checkoutConfirmation}}
      <div class="complete-order">
          <button id="confirmation-completeorder-btn"
                  class="btn complete-order-btn">{{i18n "checkout:completeMyOrder"}}</button>
          <br>
      </div>
  {{/if}}
</div>